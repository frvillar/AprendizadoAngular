{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "data": "",
                  "events": {
                    "cancel": [
                      {
                        "type": "back"
                      }
                    ],
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to create new Pessoa!",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "cprojds.createPessoa",
                        "parameters": [
                          {
                            "name": "Pessoa",
                            "value": "${event}"
                          }
                        ],
                        "then": [
                          {
                            "path": "pessoas",
                            "type": "navigate"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "loadData": [
                      {
                        "name": "cprojds.getPapeis",
                        "condition": "event.property == 'PapelPrincipal'",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "${event.top}"
                          },
                          {
                            "name": "$skip",
                            "value": "${event.skip}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$count",
                            "value": "true"
                          }
                        ],
                        "then": [
                          {
                            "name": "getPapeisResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getPapeisCount",
                            "type": "set",
                            "value": "result['@odata.count']"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "fields": [
                    {
                      "property": "Nome",
                      "required": true,
                      "title": "Nome",
                      "type": "string",
                      "maxLength": 150
                    },
                    {
                      "data": "${getPapeisResult}",
                      "property": "PapelPrincipal",
                      "required": true,
                      "textProperty": "Nome",
                      "title": "Papei",
                      "type": "lookuppopup",
                      "valueProperty": "Papel",
                      "placeholder": "Choose Papei",
                      "count": "${getPapeisCount}"
                    },
                    {
                      "property": "ativo",
                      "required": false,
                      "title": "Ativo",
                      "type": "boolean"
                    },
                    {
                      "property": "senha",
                      "required": false,
                      "title": "Senha",
                      "type": "string",
                      "maxLength": 150
                    }
                  ],
                  "name": "form0",
                  "type": "form"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "cprojds.getPapeis",
        "parameters": [
          {
            "name": "$top",
            "value": "(<any>this.form0.fields.find(f => f.property == 'PapelPrincipal')).pageSize"
          },
          {
            "name": "$skip",
            "value": "0"
          },
          {
            "name": "$count",
            "value": "true"
          }
        ],
        "then": [
          {
            "name": "getPapeisResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getPapeisCount",
            "type": "set",
            "value": "result['@odata.count']"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Add Pessoa",
  "layout": "Main"
}