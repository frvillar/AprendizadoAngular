{
  "access": [],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Tarefas por Projeto",
          "type": "heading"
        },
        {
          "data": "${getProjetosResult}",
          "events": {
            "change": [
              {
                "condition": "",
                "name": "cprojds.getTarefas",
                "parameters": [
                  {
                    "name": "$filter",
                    "value": "Projeto eq ${event.Projeto1}"
                  },
                  {
                    "name": "$expand",
                    "value": "Pessoa,Projeto1"
                  }
                ],
                "then": [
                  {
                    "name": "tarefas",
                    "type": "set",
                    "value": "${result.value}"
                  }
                ],
                "type": "invoke"
              }
            ]
          },
          "name": "projetosFilter",
          "placeholder": "Selecione o projeto",
          "template": "",
          "textProperty": "Descricao",
          "type": "dropdown",
          "valueProperty": "Projeto1"
        },
        {
          "addText": "Add",
          "allowFiltering": true,
          "allowPaging": true,
          "allowSorting": true,
          "columns": [
            {
              "property": "Tarefa1",
              "title": "Tarefa",
              "type": "integer"
            },
            {
              "format": "date-time",
              "property": "Data",
              "template": "${data.Data | date: 'dd/MM/yyyy'}",
              "title": "Data",
              "type": "string"
            },
            {
              "filterProperty": "Pessoa.Nome",
              "property": "Responsavel",
              "sortProperty": "Pessoa.Nome",
              "template": "${data.Pessoa?.Nome}",
              "title": "Pessoa",
              "type": "string"
            },
            {
              "format": "decimal",
              "property": "Horas",
              "title": "Horas",
              "type": "number"
            },
            {
              "property": "Descricao",
              "title": "Descricao",
              "type": "string"
            },
            {
              "filterProperty": "Projeto1.Descricao",
              "property": "Projeto",
              "sortProperty": "Projeto1.Descricao",
              "template": "${data.Projeto1?.Descricao}",
              "title": "Projeto",
              "type": "string"
            },
            {
              "format": "date-time",
              "property": "dataDig",
              "template": "${data.dataDig | utcDate}",
              "title": "Data Dig",
              "type": "string"
            },
            {
              "property": "Manutencao",
              "title": "Manutencao",
              "type": "boolean"
            },
            {}
          ],
          "data": "${tarefas}",
          "emptyText": "No records to display.",
          "name": "grid0",
          "pageSize": 5,
          "style": {
            "height": "322px"
          },
          "type": "grid"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "cprojds.getProjetos",
        "parameters": [],
        "then": [
          {
            "name": "getProjetosResult",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Tarefas por Projeto"
}