{
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Tarefas",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "addText": "Add",
                  "allowAdd": true,
                  "allowDelete": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columns": [
                    {
                      "property": "Tarefa1",
                      "title": "Tarefa",
                      "type": "integer"
                    },
                    {
                      "format": "date-time",
                      "property": "Data",
                      "template": "${data.Data | utcDate}",
                      "title": "Data",
                      "type": "string"
                    },
                    {
                      "filterProperty": "Pessoa.Nome",
                      "property": "Responsavel",
                      "sortProperty": "Pessoa.Nome",
                      "template": "${data.Pessoa?.Nome}",
                      "title": "Pessoa",
                      "type": "string"
                    },
                    {
                      "format": "decimal",
                      "property": "Horas",
                      "title": "Horas",
                      "type": "number"
                    },
                    {
                      "property": "Descricao",
                      "title": "Descricao",
                      "type": "string"
                    },
                    {
                      "filterProperty": "Projeto1.Descricao",
                      "property": "Projeto",
                      "sortProperty": "Projeto1.Descricao",
                      "template": "${data.Projeto1?.Descricao}",
                      "title": "Projeto",
                      "type": "string"
                    },
                    {
                      "format": "date-time",
                      "property": "dataDig",
                      "template": "${data.dataDig | utcDate}",
                      "title": "Data Dig",
                      "type": "string"
                    },
                    {
                      "property": "Manutencao",
                      "title": "Manutencao",
                      "type": "boolean"
                    }
                  ],
                  "count": "${getTarefasCount}",
                  "data": "${getTarefasResult}",
                  "emptyText": "No records to display.",
                  "events": {
                    "add": [
                      {
                        "path": "add-tarefa",
                        "type": "popup"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Tarefa",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "cprojds.deleteTarefa",
                        "parameters": [
                          {
                            "name": "Tarefa1",
                            "value": "${event.Tarefa1}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Tarefa deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "loadData": [
                      {
                        "code": "let usedOrder: string = event.orderby;",
                        "condition": "",
                        "type": "execute"
                      },
                      {
                        "code": "usedOrder = this.orderBy;",
                        "condition": "event.orderby == ''",
                        "type": "execute"
                      },
                      {
                        "name": "cprojds.getTarefas",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": "Pessoa,Projeto1"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${usedOrder}"
                          },
                          {
                            "name": "$expand",
                            "value": "Pessoa,Projeto1"
                          }
                        ],
                        "then": [
                          {
                            "name": "getTarefasResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getTarefasCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          },
                          {
                            "code": "",
                            "type": "execute"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "Tarefa1",
                            "value": "${event.Tarefa1}"
                          }
                        ],
                        "path": "edit-tarefa",
                        "type": "popup"
                      }
                    ]
                  },
                  "name": "grid0",
                  "pageSize": 5,
                  "title": "",
                  "type": "grid"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "orderBy",
        "type": "set",
        "value": "'tarefa1 desc'"
      },
      {
        "name": "cprojds.getTarefas",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          },
          {
            "name": "$expand",
            "value": "Pessoa,Projeto1"
          },
          {
            "name": "$orderby",
            "value": "${orderBy}"
          }
        ],
        "then": [
          {
            "name": "getTarefasResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getTarefasCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Tarefas"
}