{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "data": "${tarefa}",
                  "events": {
                    "cancel": [
                      {
                        "type": "back"
                      }
                    ],
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to update Tarefa",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "cproj3ds.updateTarefa",
                        "parameters": [
                          {
                            "name": "Tarefa1",
                            "value": "${parameters.Tarefa1}"
                          },
                          {
                            "name": "Tarefa",
                            "value": "${event}"
                          }
                        ],
                        "then": [
                          {
                            "type": "back"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "loadData": [
                      {
                        "name": "cproj3ds.getPessoas",
                        "condition": "event.property == 'Responsavel'",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "${event.top}"
                          },
                          {
                            "name": "$skip",
                            "value": "${event.skip}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$count",
                            "value": "true"
                          }
                        ],
                        "then": [
                          {
                            "name": "getPessoasResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getPessoasCount",
                            "type": "set",
                            "value": "result['@odata.count']"
                          }
                        ],
                        "type": "invoke"
                      },
                      {
                        "name": "cproj3ds.getProjetos",
                        "condition": "event.property == 'Projeto'",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "${event.top}"
                          },
                          {
                            "name": "$skip",
                            "value": "${event.skip}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$count",
                            "value": "true"
                          }
                        ],
                        "then": [
                          {
                            "name": "getProjetosResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getProjetosCount",
                            "type": "set",
                            "value": "result['@odata.count']"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "fields": [
                    {
                      "property": "Data",
                      "required": false,
                      "title": "Data",
                      "type": "date",
                      "requiredText": "is required"
                    },
                    {
                      "data": "${getPessoasResult}",
                      "property": "Responsavel",
                      "required": true,
                      "textProperty": "Nome",
                      "title": "Pessoa",
                      "type": "lookuppopup",
                      "valueProperty": "Pessoa1",
                      "placeholder": "Choose Pessoa",
                      "count": "${getPessoasCount}",
                      "requiredText": "is required"
                    },
                    {
                      "property": "Horas",
                      "required": false,
                      "title": "Horas",
                      "type": "number",
                      "requiredText": "is required"
                    },
                    {
                      "property": "Descricao",
                      "required": true,
                      "title": "Descricao",
                      "type": "string",
                      "maxLength": 500,
                      "requiredText": "is required"
                    },
                    {
                      "data": "${getProjetosResult}",
                      "property": "Projeto",
                      "required": true,
                      "textProperty": "Descricao",
                      "title": "Projeto",
                      "type": "lookuppopup",
                      "valueProperty": "Projeto1",
                      "placeholder": "Choose Projeto",
                      "count": "${getProjetosCount}",
                      "requiredText": "is required"
                    },
                    {
                      "property": "dataDig",
                      "required": false,
                      "title": "Data Dig",
                      "type": "date",
                      "requiredText": "is required"
                    },
                    {
                      "property": "Manutencao",
                      "required": true,
                      "title": "Manutencao",
                      "type": "boolean",
                      "requiredText": "is required"
                    }
                  ],
                  "name": "form0",
                  "type": "form"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "cproj3ds.getTarefaByTarefa1",
        "parameters": [
          {
            "name": "Tarefa1",
            "value": "${parameters.Tarefa1}"
          }
        ],
        "then": [
          {
            "name": "tarefa",
            "type": "set",
            "value": "${result}"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "cproj3ds.getPessoas",
        "parameters": [
          {
            "name": "$top",
            "value": "(<any>this.form0.fields.find(f => f.property == 'Responsavel')).pageSize"
          },
          {
            "name": "$skip",
            "value": "0"
          },
          {
            "name": "$count",
            "value": "true"
          }
        ],
        "then": [
          {
            "name": "getPessoasResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getPessoasCount",
            "type": "set",
            "value": "result['@odata.count']"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "cproj3ds.getProjetos",
        "parameters": [
          {
            "name": "$top",
            "value": "(<any>this.form0.fields.find(f => f.property == 'Projeto')).pageSize"
          },
          {
            "name": "$skip",
            "value": "0"
          },
          {
            "name": "$count",
            "value": "true"
          }
        ],
        "then": [
          {
            "name": "getProjetosResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getProjetosCount",
            "type": "set",
            "value": "result['@odata.count']"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Edit Tarefa",
  "layout": "Main",
  "access": []
}