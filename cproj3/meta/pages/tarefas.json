{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Tarefas"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "name": "grid0",
                  "allowDelete": true,
                  "allowAdd": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "count": "${getTarefasCount}",
                  "data": "${getTarefasResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "cproj3ds.getTarefas",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": "Pessoa,Projeto1"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$expand",
                            "value": "Pessoa,Projeto1"
                          }
                        ],
                        "then": [
                          {
                            "name": "getTarefasResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getTarefasCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Tarefa",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "cproj3ds.deleteTarefa",
                        "parameters": [
                          {
                            "name": "Tarefa1",
                            "value": "${event.Tarefa1}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Tarefa deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "add": [
                      {
                        "path": "add-tarefa",
                        "type": "popup"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "Tarefa1",
                            "value": "${event.Tarefa1}"
                          }
                        ],
                        "path": "edit-tarefa",
                        "type": "popup"
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "Tarefa1",
                      "title": "Tarefa",
                      "type": "integer"
                    },
                    {
                      "format": "date-time",
                      "property": "Data",
                      "template": "${data.Data | utcDate}",
                      "title": "Data",
                      "type": "string"
                    },
                    {
                      "property": "Responsavel",
                      "sortProperty": "Pessoa.Nome",
                      "filterProperty": "Pessoa.Nome",
                      "template": "${data.Pessoa?.Nome}",
                      "title": "Pessoa",
                      "type": "string"
                    },
                    {
                      "format": "decimal",
                      "property": "Horas",
                      "title": "Horas",
                      "type": "number"
                    },
                    {
                      "property": "Descricao",
                      "title": "Descricao",
                      "type": "string"
                    },
                    {
                      "property": "Projeto",
                      "sortProperty": "Projeto1.Descricao",
                      "filterProperty": "Projeto1.Descricao",
                      "template": "${data.Projeto1?.Descricao}",
                      "title": "Projeto",
                      "type": "string"
                    },
                    {
                      "format": "date-time",
                      "property": "dataDig",
                      "template": "${data.dataDig | utcDate}",
                      "title": "Data Dig",
                      "type": "string"
                    },
                    {
                      "property": "Manutencao",
                      "title": "Manutencao",
                      "type": "boolean"
                    }
                  ],
                  "type": "grid",
                  "pageSize": 5,
                  "emptyText": "No records to display.",
                  "addText": "Add"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "cproj3ds.getTarefas",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          },
          {
            "name": "$expand",
            "value": "Pessoa,Projeto1"
          }
        ],
        "then": [
          {
            "name": "getTarefasResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getTarefasCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Tarefas",
  "layout": "Main",
  "access": []
}