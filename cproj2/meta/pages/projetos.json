{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Projetos"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "name": "grid0",
                  "allowDelete": true,
                  "allowAdd": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "count": "${getProjetosCount}",
                  "data": "${getProjetosResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "cproj2ds.getProjetos",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": "Pessoa"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$expand",
                            "value": "Pessoa"
                          }
                        ],
                        "then": [
                          {
                            "name": "getProjetosResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getProjetosCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Projeto",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "cproj2ds.deleteProjeto",
                        "parameters": [
                          {
                            "name": "Projeto1",
                            "value": "${event.Projeto1}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Projeto deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "add": [
                      {
                        "path": "add-projeto",
                        "type": "popup"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "Projeto1",
                            "value": "${event.Projeto1}"
                          }
                        ],
                        "path": "edit-projeto",
                        "type": "popup"
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "Projeto1",
                      "title": "Projeto",
                      "type": "integer"
                    },
                    {
                      "property": "Descricao",
                      "title": "Descricao",
                      "type": "string"
                    },
                    {
                      "property": "Cliente",
                      "sortProperty": "Pessoa.Nome",
                      "filterProperty": "Pessoa.Nome",
                      "template": "${data.Pessoa?.Nome}",
                      "title": "Pessoa",
                      "type": "string"
                    },
                    {
                      "property": "ativo",
                      "title": "Ativo",
                      "type": "boolean"
                    },
                    {
                      "format": "int64",
                      "property": "CentroResultado",
                      "title": "Centro Resultado",
                      "type": "integer"
                    }
                  ],
                  "type": "grid"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "cproj2ds.getProjetos",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          },
          {
            "name": "$expand",
            "value": "Pessoa"
          }
        ],
        "then": [
          {
            "name": "getProjetosResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getProjetosCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Projetos",
  "layout": "Main"
}